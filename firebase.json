{
  "database": {
    "rules": "database.rules.json"
  },
  "hosting": {
    "public": "public",
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ],
    "ignore": [
      "firebase.json",
      "database.rules.json",
      "node_modules",
      "bower_components",
      "tmp",
      "tests",
      "*.log"
    ]
  }
}
